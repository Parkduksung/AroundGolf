<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">#000000</item>
    </style>

    <style name="Theme.Main" parent="AppTheme">
        <item name="android:statusBarColor">@color/color05</item>
        <item name="android:navigationBarColor">@color/color05</item>
        <item name="android:windowBackground">@drawable/bg_window</item>
    </style>

    <style name="Theme.FullScreen" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="Theme.MobileFullScreen" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode">
            shortEdges <!-- default, shortEdges, never -->
        </item>
    </style>

    <style name="Theme.Translucent" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@drawable/translucent_background</item>
    </style>

    <style name="Theme.ConnectingSub" parent="Theme.FullScreen">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@drawable/translucent_background</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <!-- START DEFINES REMOTE EXPLORER -->

    <style name="Theme.BorderlessDialog" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="WindowTitleBackground">
        <item name="background">@drawable/re_bg_topbar_title</item>
    </style>

    <!-- Edit Text -->
    <style name="REEdit">
        <item name="android:textSize">@dimen/re_fontsize_12</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="REEdit.prompt">
        <item name="android:textColor">@color/re_dialog_textcolor</item>
        <item name="android:paddingLeft">6dip</item>
        <item name="android:paddingRight">6dip</item>
    </style>

    <!-- Tab -->
    <style name="re_explorer_tabstyle">
        <item name="android:textSize">@dimen/re_fontsize_13</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <!-- TextView -->
    <style name="ListFileText">
        <item name="android:textColor">@color/re_white</item>
        <item name="android:textSize">@dimen/re_fontsize_14</item>
    </style>

    <style name="ListFileSize">
        <item name="android:textColor">@color/re_dark_white</item>
        <item name="android:textSize">@dimen/re_fontsize_10</item>
    </style>

    <style name="TransferSubTitle">
        <item name="android:textColor">@color/re_white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/re_fontsize_14</item>
    </style>

    <style name="TransferSubTitleNavigator">
        <item name="android:textColor">@color/re_white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/re_fontsize_14</item>
        <item name="background">@drawable/re_explorer_transferhistory_subtitle_navigator</item>
    </style>

    <style name="ListCurrentDirectory">
        <item name="android:textColor">@color/re_white</item>
        <item name="android:textSize">@dimen/re_fontsize_14</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="REFileTransferInfo">
        <item name="android:textColor">@color/re_white</item>
        <item name="android:textSize">@dimen/re_fontsize_12</item>
    </style>

    <style name="REFileSizeInfo">
        <item name="android:textColor">@color/re_transfer_filesizeinfo</item>
        <item name="android:textSize">@dimen/re_fontsize_12</item>
    </style>

    <style name="RENotificationTitleInfo">
        <item name="android:textColor">@color/re_white</item>
        <item name="android:textSize">@dimen/re_fontsize_14</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RENotificationInfo">
        <item name="android:textColor">@color/re_popup_title_line</item>
        <item name="android:textSize">@dimen/re_fontsize_14</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RENotificationSizeInfo">
        <item name="android:textColor">@color/re_white</item>
        <item name="android:textSize">@dimen/re_fontsize_11</item>
    </style>

    <style name="RETransferHistoryFileName">
        <item name="android:textColor">@color/re_white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/re_fontsize_12</item>
    </style>

    <style name="RETransferHistoryCount">
        <item name="android:textColor">@color/re_transferhistory_filesizecount</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/re_fontsize_12</item>
    </style>

    <style name="RETransferHistoryFileSize">
        <item name="android:textColor">@color/re_transferhistory_filesizeinfo</item>
        <item name="android:textSize">@dimen/re_fontsize_10</item>
    </style>

    <style name="re_tooltip">
        <item name="android:textColor">@color/re_white</item>
        <item name="android:textSize">@dimen/re_fontsize_13</item>
    </style>

    <style name="RETransferHistoryFailMessage">
        <item name="android:textColor">@color/solid_red</item>
        <item name="android:textSize">@dimen/re_fontsize_10</item>
    </style>

    <style name="RETransferHistorySuccessMessage">
        <item name="android:textColor">@color/solid_green</item>
        <item name="android:textSize">@dimen/re_fontsize_10</item>
    </style>
    
    <style name="RVDialog">
        <item name="android:textColor">@color/color14</item>
        <item name="android:textSize">@dimen/size03</item>
    </style>
    <style name="RVDialogTitle">
        <item name="android:textColor">@color/color04</item>
        <item name="android:textSize">@dimen/size01</item>
    </style>

    <style name="REButton">
        <item name="android:textColor">@color/re_white</item>
        <item name="android:textSize">@dimen/re_fontsize_14</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingLeft">5dip</item>
        <item name="android:paddingRight">5dip</item>
    </style>

    <style name="re_popup_highlight">
        <item name="android:textSize">@dimen/re_fontsize_13</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/re_popup_background_text</item>
    </style>

    <style name="re_popup_itemlist">
        <item name="android:textSize">@dimen/re_fontsize_12</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/re_dialog_textcolor</item>
    </style>

    <style name="re_explorer_tool_bg">
        <item name="android:textColor">@color/re_white</item>
        <item name="android:textSize">@dimen/re_fontsize_13</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="re_explorer_manage_bg">
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="re_transferhistory_bg">
        <item name="android:textColor">@color/re_white</item>
        <item name="android:background">@drawable/re_explorer_manage_bg</item>
    </style>

    <style name="re_explorer_transferhistory_bg">
        <item name="android:background">@drawable/re_explorer_transferhistory_bg</item>
    </style>

    <!-- 스크롤바 -->
    <style name="re_explorer_scrollbar">
        <item name="android:scrollbarThumbVertical">@drawable/re_scrollbar_thumb</item>
        <!-- <item name="android:scrollbarTrackVertical">@drawable/re_scrollbar_track</item> -->
    </style>

    <!-- 새 다이얼로그 정의 시작 -->
    <style name="REDialog">
        <item name="android:textColor">@color/re_dialog_titlecolor</item>
        <item name="android:textSize">@dimen/re_fontsize_14</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="re_dialog_desctext">
        <item name="android:textColor">@color/re_dialog_textcolor</item>
        <item name="android:textSize">@dimen/re_fontsize_12</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="REButton.left_button">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/re_positive_button</item>
    </style>

    <style name="REButton.right_button">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/re_negative_button</item>
    </style>

    <style name="REButton.confirm_button">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/re_positive_button</item>
        <item name="android:textColor">@drawable/re_button_textcolor</item>
    </style>

    <style name="ProgressDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- <item name="android:windowTitleStyle">@null</item> -->
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    
    <style name="CanvasProgressDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <!-- 새 다이얼로그 정의 끝 -->
	
	<style name="RVListViewDialogGroupTheme">
		<item name="android:background">@drawable/bg_dialogue_group</item>
		<item name="divider">@android:color/transparent</item>
		<item name="android:dividerHeight">0dip</item>
		<item name="android:scrollbars">none</item>
		<item name="android:cacheColorHint">@android:color/transparent</item>
		<item name="android:padding">0dip</item>
		<item name="android:layout_margin">0dip</item>
	</style>
	
	<style name="RVListViewDialogWhiteGroupTheme">
		<item name="android:background">@drawable/bg_dialogue_group_white</item>
		<item name="divider">@android:color/transparent</item>
		<item name="android:dividerHeight">0dip</item>
		<item name="android:scrollbars">none</item>
		<item name="android:cacheColorHint">@android:color/transparent</item>
		<item name="android:padding">0dip</item>
		<item name="android:layout_margin">0dip</item>
	</style>

    <!-- END DEFINES REMOTE EXPLORER -->

    <style name="VerticalButtonItem">
        <item name="android:background">@drawable/listgroup_item</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="VerticalButtonItemText">
        <item name="android:padding">@dimen/padding_10</item>
        <item name="android:textSize">@dimen/size01</item>
        <item name="android:textColor">@drawable/text_selector_01</item>
    </style>

    <style name="remoteRequestForm_text">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="remoteRequestForm_title" parent="remoteRequestForm_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#333333</item>
    </style>

    <style name="remoteRequestForm_contents" parent="remoteRequestForm_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="remoteRequestForm_line">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:background">#bebebe</item>
    </style>

    <style name="RemoteRequestHistoryItem_text">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="RemoteRequestHistoryItem_title" parent="RemoteRequestHistoryItem_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#333333</item>
    </style>

    <style name="RemoteRequestHistoryItem_contents" parent="RemoteRequestHistoryItem_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">#666666</item>
    </style>

    <style name="RemoteRequestHistoryItem_line">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:background">#bebebe</item>
    </style>

    <style name="REActivityCustomTheme" parent="AppTheme">
        <item name="android:windowTitleSize">23dip</item>
        <item name="android:windowTitleBackgroundStyle">@style/WindowTitleBackground</item>
    </style>

    <style name="InputTextOutline" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">@color/color13</item>
        <item name="boxStrokeColor">@color/white</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="hintEnabled">true</item>
        <item name="hintAnimationEnabled">true</item>
        <item name="android:padding">5dp</item>
    </style>
</resources>